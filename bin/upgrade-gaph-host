#!/bin/bash

# Script to install gaph configurations
# Leandro Sehnem Heck (leoheck@gmail.com)

# CONFIG_SCRIPT="https://raw.githubusercontent.com/leoheck/gaph-host-config/master/configure.sh"
CONFIG_SCRIPT="https://raw.githubusercontent.com/leoheck/gaph-host-config/ubuntu-16.04/configure.sh"

UPGRADE_OPTION=3

echo $UPGRADE_OPTION | sh -c "$(curl -fsSL $CONFIG_SCRIPT)"
